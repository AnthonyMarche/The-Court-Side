{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}<h1 class="text-center">Statistiques du site</h1>{% endblock %}

{% block page_content %}
    <div class="container">
        <div class="row">
            <div class="card col-12 col-sm-6 col-lg-3">
                <div class="card-body">
                    <h5 class="card-title text-center mb-2">Statistiques globales</h5>
{#                    <p class="card-text">Nombre de visiteurs : 1556</p>#}
                    <p class="card-text">Nombre d'inscrits : {{ users|length }}</p>
                    <p class="card-text">Nombre de vidéos : {{ videos|length }}</p>
                    <p class="card-text">Nombre de likes : {{ likes }}</p>
                </div>
            </div>
            <div class="card col-12 col-sm-6 col-lg-3">
                <div class="card-body">
                    <h5 class="card-title text-center mb-2">7 derniers jours</h5>
{#                    <p class="card-text">Nombre de visiteurs : 235</p>#}
                    <p class="card-text">Nombre d'inscrits : 54</p>
                    <p class="card-text">Nombre de vidéos : 12</p>
                    <p class="card-text">Nombre de likes : 87</p>
                </div>
            </div>
            <div class="card col-12 col-sm-6 col-lg-3">
                <div class="card-body">
                    <h5 class="card-title text-center mb-2">30 derniers jours</h5>
{#                    <p class="card-text">Nombre de visiteurs : 854</p>#}
                    <p class="card-text">Nombre d'inscrits : 257</p>
                    <p class="card-text">Nombre de vidéos : 52</p>
                    <p class="card-text">Nombre de likes : 325</p>
                </div>
            </div>
            <div class="card col-12 col-sm-6 col-lg-3">
                <div class="card-body">
                    <h5 class="card-title text-center mb-2">Catégories avec le plus de likes</h5>
                    <p class="card-text">Basketball : 652</p>
                    <p class="card-text">Football : 526</p>
                    <p class="card-text">Tennis : 423</p>
                    <p class="card-text">Hockey sur glace : 287</p>
                </div>
            </div>
        </div>
        <div class="row pt-4">
            <div class="card col-12 col-sm-6">
                <div class="card-body">
                    <h5 class="card-title text-center">Visiteurs et inscrits sur le site (12 derniers mois)</h5>
                </div>
            </div>
            <div class="card col-12 col-sm-6">
                <div class="card-body">
                    <h5 class="card-title text-center">Likes sur le site (12 derniers mois)</h5>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
