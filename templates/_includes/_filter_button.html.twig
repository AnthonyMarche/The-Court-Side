{# fake loading #}
<div class="loading-container disappearance">
    <div>
        <div class="spinner-border text-secondary loading-spinner" role="status">
            <span class="visually-hidden"></span>
        </div>
    </div>
</div>

{# filter button #}
<div class="filter-form-container d-flex align-items-center justify-content-end">
    <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
            <span class="sorted-by-likes disappearance">Les plus aimées</span>
            <span class="sorted-by-recent">Les plus récentes</span>
            <span class="sorted-by-views disappearance">Les plus vues</span>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <a href="{{ recent }}" id="dateFilter">
                <button class="dropdown-item" type="button">Les plus récentes</button>
            </a>
            <a href="{{ likes }}" id="likesFilter">
                <button class="dropdown-item" type="button">Les plus aimées</button>
            </a>
            <a href="{{ views }}" id="viewsFilter">
                <button class="dropdown-item" type="button">Les plus vues</button>
            </a>
        </div>
    </div>
</div>
