{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_user_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion au compte</h1>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="mb-3 col-sm-12 col-md-10 col-lg-8">
                    <label for="inputEmail">Adresse email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                </div>
                <div class="mb-3 col-sm-12 col-md-10 col-lg-8">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>
                </div>
                <div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="form-check mb-3 col-sm-11 col-md-10 col-lg-8">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="_remember_me">
                    <label class="form-check-label" for="flexCheckDefault">
                        Se souvenir de moi
                    </label>
                </div>
                <div class="mb-3 col-sm-11 col-md-10 col-lg-8 text-center">
                    <a href="{{ path ('app_forgot_password_request') }}">J'ai oubli√© mon mot de passe</a>
                </div>
                <button class="btn btn-lg btn-primary col-sm-11 col-md-10 col-lg-8" type="submit">
                    Se connecter
                </button>
                <p class="mt-3">Pas encore de compte ?
                    <a href="{{ path('app_register') }}">Cliquez ici pour vous inscrire !</a>
                </p>
            </div>
        </div>
    </form>
    </div>
{% endblock %}
