{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <form class="login-form" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a
                    href="{{ path('app_user_logout') }}">{{ 'navbar.logout'|trans}}</a>
            </div>
        {% endif %}

        <div class="container mt-3 p-4">
            <div class="row d-flex justify-content-center">
                <div class="mb-3 img-fluid col-lg-12 d-flex justify-content-center">
                    <img src="{{ asset('build/images/TCS_logo/TCS_white_logo.png') }}"
                         alt="Logo The Court Side">
                </div>
                <div class="mb-3 col-12 col-md-10 col-lg-8">
                    <label for="inputEmail"> {{'mail.login'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                </div>
                <div class="mb-3 col-12 col-md-10 col-lg-8">
                    <label for="inputPassword">{{ 'password.login'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>
                </div>
                <div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="form-check mb-3 col-11 col-md-9 col-lg-7">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="_remember_me">
                    <label class="form-check-label" for="flexCheckDefault"> {{ 'checkbox.login'|trans }}

                    </label>
                </div>
                <div class="mb-3 col-11 col-md-10 col-lg-8 text-center">
                    <a href="{{ path ('app_forgot_password_request') }}" style="color:  var(--element-color)">{{ 'passwordforgot.login'|trans }}

                </div>
                <button class="btn btn-lg col-sm-11 col-md-9 col-lg-7 custom-login-connect" type="submit">
                    {{ 'button.login'|trans }}
                </button>
                <p class="mt-3 col-11 col-md-10 col-lg-8 text-center">
                    <a href="{{ path('app_register') }}" style="color:  var(--element-color)">{{ 'inscription.login' }}</a>
                </p>
            </div>
        </div>
    </form>
{% endblock %}
{% block footer %}{% endblock %}
