{% extends 'user/user_base.html.twig' %}

{% block title %}{{ 'userprofile.edit-profile'|trans }}{% endblock %}

{% block profileContent %}
        <div class="container show-user text-light">
            <h1 class="text-center text-light my-5">{{ 'userprofile.edit-profile'|trans }}</h1>
            <div>
                <div class="p-3 show-user-table">
                    {{ form_start(profileForm) }}
                    <div class="row d-flex flex-column align-items-center">
                        <div class="text-center col-12 col-md-10 col-lg-6"><p class="h5 my-2">{{ 'userprofile.personal-data'|trans }}</p></div>
                        <div class="col-12 col-md-10 col-lg-6">
                            {{ form_label(profileForm.email) }}
                            {{ form_widget(profileForm.email, {'attr': {'class': 'form-control mb-3'}}) }}
                        </div>
                        <div class="col-12 col-md-10 col-lg-6">
                            {{ form_label(profileForm.username) }}
                            {{ form_widget(profileForm.username, {'attr': {'class': 'form-control mb-3'}}) }}
                        </div>
                        <div class="text-center col-12 col-md-10 col-lg-6"><p class="h5 my-2">Newsletter</p></div>
                        <div class="mb-3 col-12 col-md-10 col-lg-6">
                            {{ form_label(profileForm.newsletter) }}
                            {{ form_widget(profileForm.newsletter, {'attr': {'class': 'form-check-input ml-2 mb-3'}}) }}
                        </div>
                        <div class="d-flex justify-content-around justify-content-md-end mb-3 col-12 col-md-10 col-lg-6">
                            <button type="submit" class="btn btn-outline-custom mx-md-2">{{ 'userprofile.save-btn'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(profileForm) }}
                </div>
            </div>
        </div>
{% endblock %}
