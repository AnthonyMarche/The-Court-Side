{% extends 'user/user_base.html.twig' %}

{% block title %}{{ 'userprofile.edit-profile'|trans }}{% endblock %}

{% block profileContent %}
    <div class="container show-user text-light">
        <h1 class="text-center text-light my-5">{{ 'userprofile.edit-profile'|trans }}</h1>
        <div>
            <div class="p-3">
                <div class="col-12 col-md-10 col-lg-6 m-auto">
                    {{ include('_includes/_errors_container.html.twig') }}
                </div>
                {{ form_start(passwordForm) }}
                <div class="d-flex flex-column align-items-center mt-5">
                    <div class="col-12 col-md-10 col-lg-6">
                        <div class="text-danger">
                            {{ form_errors(passwordForm.currentPassword) }}
                        </div>
                        {{ form_label(passwordForm.currentPassword) }}
                        {{ form_widget(passwordForm.currentPassword) }}
                    </div>
                    <div class="col-12 col-md-10 col-lg-6">
                        {{ form_errors(passwordForm.newPassword) }}
                        {{ form_label(passwordForm.newPassword) }}
                        {{ form_widget(passwordForm.newPassword) }}
                        {{ include('_includes/_password_requierement.html.twig') }}
                    </div>
                    <div class="d-flex justify-content-around justify-content-md-end mb-3 col-12 col-md-10 col-lg-6">
                        {{ form_rest(passwordForm) }}
                    </div>
                </div>
                {{ form_end(passwordForm) }}
            </div>
        </div>
    </div>
{% endblock %}
