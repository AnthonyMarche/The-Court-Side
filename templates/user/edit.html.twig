{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    {% if user.id == app.user.id %}
        <div class="container show-user">
            <h1 class="text-center">Modifier mon profil</h1>
            <div>
                <div class="p-3 show-user-table">

                    {{ include('user/_form.html.twig', {'button_label': 'Valider'}) }}
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('app_user_show', {'id':app.user.id}) }}"
                           class="btn btn-outline-info">
                            Retour à mon profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container d-flex justify-content-center mt-4">
            <div class="card">
                <div class="card-body d-flex flex-column">
                    <p class="card-text font-italic">Vous n'êtes pas autorisé à accéder à cette page.</p>
                    <a href="{{ path('app_home') }}" class="btn btn-success">Retourner vers la page d'accueil</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
