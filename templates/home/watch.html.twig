{% extends 'base.html.twig' %}

{% block title %}{{ video.title }}{% endblock %}

{% block body %}
<div class="watch-video-container text-center mt-5">
    <div class="watch-video-head d-flex align-items-center justify-content-around p-2">
        <h2 class="watch-video-title">{{ video.title }}</h2>
        <div></div>
        <p class="watch-video-release">publiée le : {{ video.createdAt|date('d/m/Y') }}</p>
    </div>
    {% if video.isPrivate and not app.user %}
        <a href="">
            <img src="" alt="private video">
        </a>
    {% else %}
        <div class="watch-video-player-container embed-responsive embed-responsive-16by9">
            <video src="" controls class="watch-video-player embed-responsive-item"></video>
        </div>
    {% endif %}
    {% if video.isPrivate and not app.user %}
        <div class="watch-private-video-message-container text-left mt-2">
            <p class="watch-private-video-message"><i class="fa fa-lock"></i>  Cette video est réservée aux inscrits cliquez <a href="">ici</a> pour vous inscrire</p>
        </div>
    {% endif %}
    <div class="watch-video-description text-left mt-4">
        <p><strong>Description :</strong><br>{{ video.description }}</p>
    </div>
</div>
{% endblock %}

