{% extends 'base.html.twig' %}

 {% block title %}{{ videos[0].name }}{% endblock %}

{% block body %}
        <h2 class="text-center mt-4 category-main-title">{{ videos[0].name }}</h2>

        {% if videos|length > 1 %}
{#                    filter button include only if liked videos length is > 1 #}
            {% include '_includes/_filter_button.html.twig' with  {
                recent : path('app_single_category', { slug : videos[0].name, sort : 'recent'}),
                likes : path('app_single_category', { slug : videos[0].name, sort : 'likes'}),
                views : path('app_single_category', { slug : videos[0].name, sort : 'views'})
            } %}
        {% endif %}

    {# include the videos grid #}
    <div class="container-fluid p-5 py-3">
        <div class="row js-content">
            {% include '_includes/_videos_grid.html.twig' %}
        </div>
    </div>

    {# footer #}

    {% include '_includes/_main_footer.html.twig' %}
{% endblock %}
