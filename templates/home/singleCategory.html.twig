{% extends 'base.html.twig' %}

 {% block title %}{{ videos[0].category.name }}{% endblock %}

{% block body %}
    <h2 class="text-center mt-4 category-main-title text-white title-font">{{ videos[0].category.name }}</h2>

    {#        filter button include only if liked videos length is > 1#}
    {% if videos|length > 1 %}
        {% include '_includes/_filter_button.html.twig' with  {
            recent : path('app_single_category', { slug : videos[0].category.slug, sort : 'recent'}),
            likes : path('app_single_category', { slug : videos[0].category.slug, sort : 'likes'}),
            views : path('app_single_category', { slug : videos[0].category.slug, sort : 'views'})
        } %}
    {% endif %}

{#    include the videos grid#}
    <div class="container-fluid p-5 py-3">
        <div class="row js-content">
            {% include '_includes/_videos_grid.html.twig' %}
        </div>
    </div>
{% endblock %}
