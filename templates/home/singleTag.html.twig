{% extends 'base.html.twig' %}

{% block title %}{{ videos[0].tag[0].name }}{% endblock %}

{% block body %}
    <h2 class="text-center mt-4 category-main-title">tag: {{ videos[0].tag[0].name }}</h2>

    {# filter button include only if liked videos length is > 1 #}
    {% if videos|length > 1 %}
        {% include '_includes/_filter_button.html.twig' with  {
            recent : path('app_tag', { slug : videos[0].tag[0].slug, sort : 'recent'}),
            likes : path('app_tag', { slug : videos[0].tag[0].slug, sort : 'likes'}),
            views : path('app_tag', { slug : videos[0].tag[0].slug, sort : 'views'})
        } %}
    {% endif %}

    {# include the videos grid #}
    <div class="container-fluid p-5 py-3">
        <div class="row js-content">
            {% include '_includes/_videos_grid.html.twig' %}
        </div>
    </div>

    {# footer #}
    {% include '_includes/_main_footer.html.twig' %}
{% endblock %}

