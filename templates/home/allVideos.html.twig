{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% include '_includes/_modal.html.twig' with {
        buttons : true
    } %}
    <h2 id="allVideosTitle" class="text-center mt-4 category-main-title text-white title-font">
        <span class="sorted-by-likes {% if 'likes' not in app.request.uri %}disappearance{% endif %}">Les plus likées</span>
        <span class="sorted-by-recent {% if 'recent' not in app.request.uri %}disappearance{% endif %}">Les plus récentes</span>
        <span class="sorted-by-views {% if 'views' not in app.request.uri %}disappearance{% endif %}">Les plus vues</span>
    </h2>

    {#        filter button include only if liked videos length is > 1#}
    {% if videos|length > 1 %}
        {% include '_includes/_filter_button.html.twig' with  {
            recent : path('app_all', { sort : 'recent'}),
            likes : path('app_all', { sort : 'likes'}),
            views : path('app_all', { sort : 'views'})
        } %}
    {% endif %}

    {#    include the videos grid#}
    <div class="container-fluid p-5 py-3">
        <div class="row js-content">
            {% include '_includes/_videos_grid.html.twig' %}
        </div>
    </div>
{% endblock %}
