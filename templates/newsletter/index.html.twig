{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}<h1 class="text-center">Newsletter</h1>{% endblock %}

{% block page_content %}
    <div class="container">
        <h2>Personnalisez le contenu de votre newsletter</h2>
        {{ form_start(newsletter_form) }}
        <div>
            {{ form_label(newsletter_form.title, 'Titre :') }}
            {{ form_widget(newsletter_form.title, {'attr': {'class': 'form-control mb-3'}}) }}
        </div>
        <div>
            {{ form_label(newsletter_form.content, 'Contenu :') }}
            {{ form_widget(newsletter_form.content, {'attr': {'class': 'form-control mb-3'}}) }}
        </div>
        <div class="d-flex justify-content-center mb-3">
            <button class="btn btn-info">{{ button_label|default('Envoyer la newsletter Ã  tous les inscrits !') }}</button>
        </div>
    </div>
    {{ form_end(newsletter_form) }}
{% endblock %}
