{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}

{% block body %}
<form class="login-form" method="post">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <div class="mt-3 mb-3 img-fluid col-lg-12 d-flex justify-content-center">
        <img src="{{ asset('build/images/TCS_white_logo.png') }}"
             alt="Logo The Court Side">
    </div>


    {{ form_start(registrationForm) }}
    <div class="container mt-3 p-4">
        <div class="row d-flex justify-content-center">

            <div class="mb-3 col-12 col-md-10 col-lg-8">
                {{ form_label(registrationForm.username, 'Nom d\'utilisateur ') }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control mb-3'}}) }}

            </div>


            <div class="mb-3 col-12 col-md-10 col-lg-8">
                {{ form_errors(registrationForm) }}

                {{ form_label(registrationForm.email, 'Adresse email ') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-3'}}) }}
            </div>


            <div class="mb-3 col-12 col-md-10 col-lg-8">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe ') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-3'}}) }}

            </div>

            <div class="form-check mb-3 col-11 col-md-9 col-lg-7 pl-0">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, 'Agree terms & conditions') }}
            </div>

            <div class="form-check mb-3 col-11 col-md-9 col-lg-7 pl-0">
                {{ form_widget(registrationForm.newsletter) }}
                {{ form_label(registrationForm.newsletter, 'Check to subscribe to our newsletter') }}

            </div>


            <button
                class="btn btn-lg col-sm-11 col-md-9 col-lg-7 custom-login-connect">{{ button_label|default('Inscrivez-vous') }}</button>
            <a href="{{ path('app_register') }}"></a>


        </div>
    </div>

    {{ form_end(registrationForm) }}
    {% endblock %}

    {% block footer %}
    {% endblock %}
