{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container mt-3 p-3">
        <div class="mt-3 mb-3 img-fluid col-lg-12 d-flex justify-content-center">
            <img src="{{ asset('build/images/TCS_logo/TCS_white_logo.png') }}"
                 alt="Logo The Court Side">
        </div>
        <div class="col-12 col-md-10 col-lg-6 m-auto">
            {{ include('_includes/_errors_container.html.twig') }}
        </div>
        {{ form_start(registrationForm, {'attr': {'class': 'login-form'}}) }}
        <div class="row d-flex justify-content-center">
            <div class="mb-3 col-12 col-md-10 col-lg-8">
                {{ form_label(registrationForm.username) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control mb-3'}}) }}
            </div>
            <div class="mb-3 col-12 col-md-10 col-lg-8">
                {{ form_errors(registrationForm) }}
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-3'}}) }}
            </div>
            <div class="mb-3 col-12 col-md-10 col-lg-8">
                {{ form_label(registrationForm.newPassword) }}
                {{ form_widget(registrationForm.newPassword) }}
                {{ include('_includes/_password_requierement.html.twig') }}
            </div>
            <div class="form-check mb-3 col-11 col-md-9 col-lg-7 pl-0">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms) }}
            </div>
            <div class="form-check mb-3 col-11 col-md-9 col-lg-7 pl-0">
                {{ form_widget(registrationForm.newsletter) }}
                {{ form_label(registrationForm.newsletter) }}
            </div>
            <button
                class="btn btn-lg col-sm-11 col-md-9 col-lg-7 custom-login-connect">{{'button.register'|trans }}
            </button>
            <p class="mt-3 col-11 col-md-10 col-lg-8 text-center"{{ 'text.register'|trans}}>
                <a href="{{ path('app_register') }}" style="color:  var(--element-color)">{{ 'link.register'|trans }}</a>
            </p>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
{% block cookies %}{% endblock %}
{% block footer %}{% endblock %}
