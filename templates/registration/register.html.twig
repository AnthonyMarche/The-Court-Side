{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}

{% block body %}
<form class="login-form" method="post">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container mt-3 p-4">
        <div class="row d-flex justify-content-center">
            <div class="mb-3 img-fluid col-lg-12 d-flex justify-content-center">
                <img src="{{ asset('build/images/TCS_white_logo.png') }}"
                     alt="Logo The Court Side">
            </div>

            <div class="mb-3 col-12 col-md-10 col-lg-8">
                <label for="inputEmail">Adresse email</label>
                <input type="email" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
            </div>

            <div class="mb-3 col-12 col-md-10 col-lg-8">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
            </div>


            <div class="form-check mb-3 col-11 col-md-9 col-lg-7">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="_remember_me">
                <label class="form-check-label" for="flexCheckDefault">
                    Agree terms & conditions
                </label>

            </div>

            <button class="btn btn-lg col-sm-11 col-md-9 col-lg-7 custom-login-connect" input type="submit" style="text-align: center">
                S'inscrire
            </button>



{% endblock %}
